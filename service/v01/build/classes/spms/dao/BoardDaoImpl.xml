<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cgkim.dao.BoardDao">
  <resultMap type="board" id="boardResultMap">
    <id column="bno" property="bno"/>
    <result column="title"    property="title"/>
    <result column="content"  property="content"/>
    <result column="writer"  property="writer"/>
    <result column="boardpw"  property="boardpw"/>
    <result column="viewcnt"  property="viewcnt"/>
    <result column="regdate" property="regdate" javaType="java.sql.Date"/>
    <result column="moddate" property="moddate" javaType="java.sql.Date"/>
  </resultMap>
  
  <select id="selectList" resultMap="boardResultMap">
    SELECT bno
		,title
		,content
		,writer
		,boardpw
		,viewcnt
		,regdate
		,moddate
  	FROM board
    order by regdate desc
  </select>
</mapper>